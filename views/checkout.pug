doctype html
html.no-js
  head
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(rel='shortcut icon', href='/img/fav.png')
    meta(name='author', content='CodePixar')
    meta(name='description', content='')
    meta(name='keywords', content='')
    meta(charset='UTF-8')
    title Shoppers Stop
    link(rel='stylesheet', href='/css/linearicons.css')
    link(rel='stylesheet', href='/css/font-awesome.min.css')
    link(rel='stylesheet', href='/css/themify-icons.css')
    link(rel='stylesheet', href='/css/bootstrap.css')
    link(rel='stylesheet', href='/css/owl.carousel.css')
    link(rel='stylesheet', href='/css/nice-select.css')
    link(rel='stylesheet', href='/css/nouislider.min.css')
    link(rel='stylesheet', href='/css/ion.rangeSlider.css')
    link(rel='stylesheet', href='/css/ion.rangeSlider.skinFlat.css')
    link(rel='stylesheet', href='/css/magnific-popup.css')
    link(rel='stylesheet', href='/css/main.css')
    link(rel='stylesheet', href='/css/personal.css')
  body(onload="update_sub_total()")
    // Start Header Area
    header.header_area.sticky-header
      .main_menu
        nav.navbar.navbar-expand-lg.navbar-light.main_box
          .container
            a.navbar-brand.logo_h(href='/')
              img(src='/img/fav.png' alt="logo") 
            a.navbar-brand.logo_h(href='/')
              h2.heading_1 SHOPPERS STOP
            button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
              span.icon-bar
              span.icon-bar
              span.icon-bar
            #navbarSupportedContent.collapse.navbar-collapse.offset
              ul.nav.navbar-nav.menu_nav.ml-auto
                li.nav-item
                  a.nav-link(href='/') Home
                li.nav-item.submenu.dropdown
                  a.nav-link.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false') Shop
                  ul.dropdown-menu
                    li.nav-item
                      a.nav-link(href='/product/all_products') All Products
                    li.nav-item
                      a.nav-link(href='/product/category/Sports') Sports 
                    li.nav-item
                      a.nav-link(href='/product/category/Formal') Formal
                    li.nav-item
                      a.nav-link(href='/product/category/Sneakers') Sneakers
                    li.nav-item
                      a.nav-link(href='/product/category/Casual') Casual
                li.nav-item
                  a.nav-link(href='/') Contact
                li.nav-item.submenu.dropdown
                  a.nav-link.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                    span.lnr.lnr-user#user-icon
                  ul.dropdown-menu
                    li.nav-item
                      a.nav-link(href='/') Orders
                    li.nav-item
                      a.nav-link(href='/') Tracking
                    li.nav-item
                      a.nav-link(href='/users/wishlist') Wishlist
                    li.nav-item
                      a.nav-link(href='/users/logout') Logout
              ul.nav.navbar-nav.navbar-right
                li.nav-item
                  a.cart(href='/users/cart')
                    span.lnr.lnr-cart
                li.nav-item
                  button.search
                    span#search.lnr.lnr-magnifier
      #search_input_box.search_input
        .container
          form.d-flex.justify-content-between
            input#search_input.form-control(type='text', placeholder='Search Here')
            button.btn(type='submit')
            span#close_search.lnr.lnr-cross(title='Close Search')
    // End Header Area
    // Start Banner Area
    section.banner-area.organic-breadcrumb
      .container
        .breadcrumb-banner.d-flex.flex-wrap.align-items-center.justify-content-end
          .col-first
            h1 Checkout
            nav.d-flex.align-items-center
              a(href='/')
                | Home
                span.lnr.lnr-arrow-right
                | User
                span.lnr.lnr-arrow-right
              a(href='/users/checkout') Checkout
    // End Banner Area
    // ================Checkout Area =================
    section.checkout_area.section_gap
      .container
        .cupon_area
          .check_title
            h2
              | Have a coupon? 
              a(href='#') Click here to enter your code
          input(type='text', placeholder='Enter coupon code')
          a.tp_btn(href='#') Apply Coupon
        .billing_details
          .row
            .col-lg-6
              h3 Billing Details
              form.row(action='/users/checkout', method='post')
                .col-md-1.form-group
                  label Name
                .col-md-11.form-group
                  input#name1.inputs.form-control(type='text', name='name1' value=user.name)
                .col-md-1.form-group
                  label
                    span.lnr.lnr-phone.icons
                .col-md-4.form-group
                  input#number1.inputs.form-control(type='text', name='number1' value='+91 - '+user.number)
                .col-md-1.form-group
                  label
                    span.lnr.lnr-envelope.icons
                .col-md-5.form-group
                  input#email1.inputs.form-control(type='text', name='email1' value=user.email)
                .col-md-2.form-group
                  label Address
                .col-md-10.form-group
                  input#address1.inputs.form-control(type='text', name='address1' value=user.address)
                .col-md-2.form-group
                .col-md-10.form-group
                  input#city1.inputs.form-control(type='text', name='city1' value=user.city)
                .col-md-2.form-group
                .col-md-10.form-group
                  input#state1.inputs.form-control(type='text', name='state1' value=user.state+' - '+user.pincode)
                .col-md-2.form-group
                .col-md-10.form-group
                  input#country1.inputs.form-control(type='text', name='country1' value=user.country)
                .creat_account
                  h3 Shipping Details
                  .row
                    .col-md-2.form-group
                      label Ship to
                    .col-md-10.form-group
                      input#name2.inputs.form-control(type='text', name='name2' value=user.name)
                    .col-md-2.form-group
                    .col-md-10.form-group
                      input#number2.inputs.form-control(type='text', name='number2' value='+91 - '+user.number)
                    .col-md-2.form-group
                      label Address
                    .col-md-10.form-group
                      input#address2.inputs.form-control(type='text', name='address2' value=user.address)
                    .col-md-2.form-group
                    .col-md-10.form-group
                      input#city2.inputs.form-control(type='text', name='city2' value=user.city)
                    .col-md-2.form-group
                    .col-md-10.form-group
                      input#state2.inputs.form-control(type='text', name='state2' value=user.state+' - '+user.pincode)
                    .col-md-2.form-group
                    .col-md-10.form-group
                      input#country2.inputs.form-control(type='text', name='country2' value=user.country)
                  button#order_button(type='submit' value='submit') Order
            .col-lg-6
              .order_box
                h2 Your Order
                table.table#check_table
                  thead
                    tr
                      th(scope='col')
                        h4 Product
                      th(scope='col')
                        h4 Price
                      th(scope='col')
                        h4 Quantity
                      th(scope='col')
                        h4 Total
                  tbody
                    each product ,i in user.cart
                      tr
                        td
                          a(href='#')
                          | #{product.product_id.name}
                        td #{product.product_id.price} ₹
                        td #{product.quantity}
                        td.item_total(id=product.id)= product.quantity*product.product_id.price + " ₹"
                ul.list.list_2
                  li
                    a(href='#')
                      | Subtotal 
                      span.sub_total
                  li
                    a(href='#')
                      | Shipping 
                      span.l-through 100.00 ₹
                  li
                    a(href='#')
                      | Total 
                      span.sub_total(name="final_amount") 
                .payment_item
                  .radion_btn
                    input#f-option5(type='radio', name='selector'  checked="checked"  value="Cash On Delivery")
                    label(for='f-option5') Cash On Delivery
                    .check
                  p
                    | Pay cash after you get the product in your hands, feets to be exact.
                    | Please carry exact amount of exchange for a hassle free delivery.
                .payment_item.active
                  .radion_btn
                    input#f-option6(type='radio', name='selector')
                    label(for='f-option6') Paypal 
                    img(src='img/product/card.jpg', alt='')
                    .check
                  p
                    | Pay via PayPal.
                .creat_account
                  input#f-option4(type='checkbox', name='selector')
                  label(for='f-option4') I’ve read and accept the 
                    span#tc terms & conditions*
                a.primary-btn(href='#' onclick="place_order()") Proceed to Paypal
    // ================End Checkout Area =================
    // start footer Area
    footer.footer-area.section_gap
      .container
        .row
          .col-lg-4
          .col-lg-4.col-md-6.col-sm-6
            .single-footer-widget
              h6.footer_1 About Us
              p.footer_1
                | SHOPPERS STOP is your place for any type of shoes from hundreds of brands.
                | Our legacy includes more than 10-years of craftmanship, a passion for quality, with a mission to continue to inspire people
        .row
          .col-lg-4
          .col-lg-4.col-md-6.col-sm-6
            .single-footer-widget
              h6.footer_1 Follow Us
              p.footer_1 Let us be social
              .footer-social.d-flex.align-items-center.icons_1
                a(href='#')
                  i.fa.fa-facebook
                a(href='#')
                  i.fa.fa-twitter
                a(href='#')
                  i.fa.fa-instagram
                a(href='#')
                  i.fa.fa-google
        .row
          .col-lg-2
          .col-lg-8.col-md-6.col-sm-6
            .footer-bottom.d-flex.justify-content-center.align-items-center.flex-wrap
              p.footer-text.m-0
                | Copyright ©
                script.
                  document.write(new Date().getFullYear());
                |  All rights reserved | This website is made with 
                i.fa.fa-heart-o(aria-hidden='true')
                |  by Jayesh Menghani
                // End footer Area
            script(src='/js/vendor/jquery-2.2.4.min.js')
            script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js', integrity='sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4', crossorigin='anonymous')
            script(src='/js/vendor/bootstrap.min.js')
            script(src='/js/jquery.ajaxchimp.min.js')
            script(src='/js/jquery.nice-select.min.js')
            script(src='/js/jquery.sticky.js')
            script(src='/js/nouislider.min.js')
            script(src='/js/jquery.magnific-popup.min.js')
            script(src='/js/owl.carousel.min.js')
            script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyCjCGmQ0Uq4exrzdcL6rvxywDDOvfAu6eE')
            script(src='/js/gmaps.min.js')
            script(src='/js/main.js')
            script(src='/js/personal.js')
